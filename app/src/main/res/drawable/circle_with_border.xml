<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/circular_profile_image.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!-- Circular background -->
        <shape android:shape="oval">
            <solid android:color="@color/agri" /> <!-- Background color -->
        </shape>
    </item>
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <!-- White border -->
        <shape android:shape="oval">
            <solid android:color="@android:color/white" /> <!-- Border color -->
        </shape>
    </item>
</layer-list>
