<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:elevation="10dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/poster_profile_pic"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/baseline_person_24"
                android:background="@drawable/circular_bg"
                android:backgroundTint="@color/agri"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/poster_username_textView"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="UserName"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/posting_time_textView"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:textStyle="bold"
                    android:textColor="@color/grey"
                    android:text=""
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/post_menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_dots" />
    </RelativeLayout>
    <TextView
        android:id="@+id/description_textView"
        android:text="description"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/post_image"
        android:layout_width="match_parent"
        android:src="@drawable/ic_comment"
        android:visibility="visible"
        android:layout_height="wrap_content" />

    <VideoView
        android:id="@+id/post_video"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="3dp"
            android:src="@drawable/ic_like" />

        <TextView
            android:id="@+id/likes_textView"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10 likes"
            android:textAlignment="textStart"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/comments_textView"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10 comments"
            android:textAlignment="textEnd"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@android:color/darker_gray" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_comment"
            app:tint="@color/agri" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_like"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Like"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@android:color/darker_gray"
            app:icon="@drawable/ic_reaction"
            app:iconTint="@android:color/darker_gray" />

        <Button
            android:id="@+id/button2"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Comment"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@android:color/darker_gray"
            app:icon="@drawable/ic_comment"
            app:iconTint="@android:color/darker_gray" />

        <Button
            android:id="@+id/button3"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Share"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@android:color/darker_gray"
            app:icon="@drawable/ic_share"
            app:iconTint="@android:color/darker_gray" />

    </LinearLayout>

</LinearLayout>